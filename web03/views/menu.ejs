<script>
  const email=sessionStorage.getItem('email');
  if(email){
    $("#login").hide();
    $("#logout, #email, #cart").show();
    $("#email").html(email);
  }else{
    $("#login").show();
    $("#logout, #email, #cart").hide();
  }

  $("#logout").on("click", function(e){
    e.preventDefault();
    if(!confirm("정말로 로그아웃 하실래요?")) return;
    sessionStorage.clear();
    location.href="/";
  });
</script>